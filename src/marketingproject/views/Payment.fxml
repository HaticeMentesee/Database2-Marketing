<AnchorPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="marketingproject.controllers.PaymentController">
   <children>
      <Label layoutX="437.0" layoutY="51.0" text="Payment">
         <font>
            <Font name="System Bold" size="36.0" />
